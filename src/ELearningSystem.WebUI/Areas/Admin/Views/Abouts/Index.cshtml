@model ListAboutReponse

@{
    ViewData["Title"] = "About Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@{
    int count = 1;
}

<p>Total Count: @Model.TotalCount</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Image</th>
            <th>Description</th>
            <th>Item 1</th>
            <th>Item 2</th>
            <th>Item 3</th>
            <th>Item 4</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Items)
        {
            <tr>
                <td>@count</td>
                <td><img src="@item.ImageUrl" style="height:75px;width:75px;"></td>
                <td>@item.Description</td>
                <td>@item.Item1</td>
                <td>@item.Item2</td>
                <td>@item.Item3</td>
                <td>@item.Item4</td>
                <td>
                    <a asp-controller="About" asp-action="Delete" asp-area="Admin" class="btn btn-outline-danger">Delete</a>
                    <a asp-controller="About" asp-action="update" asp-area="Admin" class="btn btn-outline-warning">Update</a>
                </td>
            </tr>
            count++;
        }
    </tbody>
</table>

<br />
<a asp-controller="About" asp-action="Create" asp-area="Admin" class="btn btn-outline-success">Create</a>